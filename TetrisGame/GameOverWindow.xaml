<Window x:Class="TetrisGame.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisGame"
        mc:Ignorable="d"
        Title="Game Over!" Height="152" Width="300">
    
    <StackPanel>
        <TextBlock x:Name="ScoreTextBlock" Text="Score: 0" Margin="10"/>
        <TextBlock x:Name="LevelTextBlock" Text="Level: 1" Margin="10"/>
        <Button Content="Close" Margin="10" Width="145" Click="Button_Click"/>
    </StackPanel>
</Window>
